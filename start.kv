<Login>
    email: email.text
    pw: passwort.text
    knopf: btn

    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 2
            Label:
                text: "E-Mail"
                font_size: 30
            TextInput:
                id: email
                multiline: False
            Label:
                text: "Passwort"
                font_size: 30
            TextInput:
                password: True
                id: passwort
                multiline: False
                font_size: 30
        Button:
            text:"Anmelden"
            id: btn
            size_hint: (1.,0.5)
            font_size: 30
            on_release:
                root.loginPopup()